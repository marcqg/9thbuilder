<div class="col-md-12 col-xs-12 col-sm-12 version-<%= @version.id %>">
  <h1 class="text-center"><%= @version.name %></h1>

  <div class="row">
    <article class="version-<%= @version.id %> col-md-3 col-xs-12 col-sm-6 text-center">
      <%= link_to (ninth_age_domain_magics_path(@version.id)) do %>
          <%= image_tag asset_path('magic.jpg'), alt: t('magic.index.title'), height: 99, class: 'block-center' %>
          <h4><%= t('magic.index.title') %></h4>
      <% end %>
    </article>
    <article class="version-<%= @version.id %> col-md-3 col-xs-12 col-sm-6 text-center">
      <%= link_to (ninth_age_armies_path(@version.id)) do %>
          <%= image_tag asset_path('army.jpg'), alt: t('army.index.title'), height: 99, class: 'block-center' %>
          <h4><%= t('army.index.title') %></h4>
      <% end %>
    </article>
    <article class="version-<%= @version.id %> col-md-3 col-xs-12 col-sm-6 text-center">
      <%= link_to (ninth_age_extra_items_path(@version.id)) do %>
          <%= image_tag asset_path('magic-item.jpg'), alt: t('extra_items.index.title'), height: 99, class: 'block-center' %>
          <h4><%= t('extra_items.index.title') %></h4>
      <% end %>
    </article>
    <article class="version-<%= @version.id %> col-md-3 col-xs-12 col-sm-6 text-center">
      <%= link_to (ninth_age_magic_items_path(@version.id)) do %>
          <%= image_tag asset_path('magic-item.jpg'), alt: t('magic_items.index.title'), height: 99, class: 'block-center' %>
          <h4><%= t('magic_items.index.title') %></h4>
      <% end %>
    </article>
    <article class="version-<%= @version.id %> col-md-3 col-xs-12 col-sm-6 text-center">
      <%= link_to (ninth_age_magic_standards_path(@version.id)) do %>
          <%= image_tag asset_path('magic-standard.jpg'), alt: t('magic_standards.index.title'), height: 99, class: 'block-center' %>
          <h4><%= t('magic_standards.index.title') %></h4>
      <% end %>
    </article>
    <article class="version-<%= @version.id %> col-md-3 col-xs-12 col-sm-6 text-center">
      <%= link_to (ninth_age_special_rules_path(@version.id)) do %>
          <%= image_tag asset_path('magic-item.jpg'), alt: t('special_rules.index.title'), height: 99, class: 'block-center' %>
          <h4><%= t('special_rules.index.title') %></h4>
      <% end %>
    </article>
    <article class="version-<%= @version.id %> col-md-3 col-xs-12 col-sm-6 text-center">
      <%= link_to (ninth_age_equipments_path(@version.id)) do %>
          <%= image_tag asset_path('magic-standard.jpg'), alt: t('equipments.index.title'), height: 99, class: 'block-center' %>
          <h4><%= t('equipments.index.title') %></h4>
      <% end %>
    </article>
  </div>

  <div class="footer-back">
    <%= link_to t('version.show.back'), ninth_age_versions_path, class: 'link-back' %>
  </div>
</div>

<script>
  $(document).ready(function () {
    $("article[class*=version-]").click(function () {
      window.location = $(this).find("a").attr("href");
      return false;
    });

    var highestBox = 0;

    $("article[class*=version-]").each(function () {
      if ($(this).height() > highestBox) {
        highestBox = $(this).height();
      }
    })

    $("article[class*=version-]").height(highestBox);
  });
</script>