<%= bootstrap_devise_error_messages! %>
<div class="panel panel-default devise-bs col-md-6 col-md-offset-3">
  <div class="panel-heading">
    <h4><%= t('.sign_up', default: 'Sign up') %></h4>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }) do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :favorite_army_id, t('profile.form.favorite_army') %>
        <%= f.collection_select :favorite_army_id, NinthAge::Army.includes([:translations, :version]).order(:name), :id, :name_with_version, {include_blank: true}, {class: 'form-control'} %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
      <%= f.submit t('.sign_up', default: 'Sign up'), class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
<div class="shared-links col-md-6 col-md-offset-3">
  <%= render 'users/shared/links' %>
</div>
