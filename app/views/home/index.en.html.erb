<h1 class="grid_4 suffix_6">
  The 9th Age<br />
  <em>Army Builder</em>
</h1>
<div class="grid_6 signin">
  <%= form_for resource, :as => resource_name, :url => session_path(resource_name) do |f| %>
    <p><%= f.email_field :email, :placeholder => "Email" %>
    <%= f.password_field :password, :placeholder => "Password" %>
    <%= f.submit "sign in" %></p>
    <p><%= f.check_box :remember_me %> <%= f.label :remember_me, "Remember me" %> <%= link_to "Forgot ?", new_password_path(resource_name) %></p>
  <% end %>
</div>

<h2 class="grid_10 catcher">
  Compose<span> and </span>store<br />
  <em>your favorites armies!</em>
</h2>
<div class="grid_6 signup">
  <%= form_for resource, :as => resource_name, :url => registration_path(resource_name) do |f| %>
    <strong>Join us</strong>
    <p><%= f.text_field :name, :placeholder => "Name" %></p>
    <p><%= f.email_field :email, :placeholder => "Email" %></p>
    <p><%= f.submit "next" %></p>
  <% end %>
</div>

