<div class="new-user-apply">
  <%= link_to('Back to tournament', tournament_event_path(@event.id), {:class => 'btn btn-age pull-right'})%>
  <h1 class="text-center"><%== t('tournament.user_apply.new.title') %> (<span class="nb-user" data-user-max="<%= @event.user_max %>"><%= @event.user_applies.count %></span>/<%= @event.user_max %>)</h1>

  <div class="add-username">
    <%= hidden_field(:tournament, :event_id, :value => @event.id) %>
    <%= hidden_field(:tournament, :version_id, :value => @event.version_id) %>
    <div class="form-group">
      <label>Name:</label>
      <%= text_area :name, nil, :placeholder => t('tournament.user_apply.form.name'), class: "form-control" %>
      <small>You can add somes users (1 user by line).</small>
    </div>

    <div class="text-center">
      <button class="btn btn-age"><%= t('tournament.user_apply.form.submit') %></button>
      <%= link_to('Finish', tournament_event_path(@event.id), {:class => 'btn btn-age'})%>
    </div>
  </div>

  <%= content_tag(:ol, { class: "list-user col-md-12 col-sm-12", 'data-url': tournament_sort_user_apply_path(@event) }) do %>
    <%= render partial: 'tournament/user_applies/show', collection: @event.user_applies, as: :user_apply %>
  <% end %>
</div>